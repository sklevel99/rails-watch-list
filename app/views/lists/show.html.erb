
<h1><%= @list.name %></h1>

<%= link_to "Back to lists", lists_path %>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Delete bookmark", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>

<div>
  <% @list.movies.each do |movie| %>
    <%= movie.title %>
    <%= movie.overview %>
    <%= image_tag movie.poster_url %>
    <%= movie.rating %>
  <% end %>
</div>
